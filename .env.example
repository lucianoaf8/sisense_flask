# Sisense Configuration
SISENSE_URL=https://your-sisense-instance.com

# Authentication Methods (choose one):
# Option 1: API Token (recommended)
SISENSE_API_TOKEN=your_sisense_api_token_here

# Option 2: Username/Password (fallback)
# SISENSE_USERNAME=your_username
# SISENSE_PASSWORD=your_password

# Environment-Specific Configuration (Advanced)
# Platform Override: auto, linux, windows
SISENSE_PLATFORM_OVERRIDE=auto

# API Version Override: auto, v1, v2
SISENSE_API_VERSION_OVERRIDE=auto

# Base Path Override (for tenant-specific routing): empty for default /api/
# Example: app (results in /app/api/v1/), tenant1 (results in /tenant1/api/v1/)
SISENSE_BASE_PATH_OVERRIDE=

# Disable live data features (for Windows/legacy deployments)
SISENSE_DISABLE_LIVE_FEATURES=false

# Enable debug mode (additional logging and headers)
SISENSE_DEBUG_MODE=false

# Demo Mode (set to true to run without real Sisense credentials)
DEMO_MODE=false

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_PORT=5000

# Authentication Settings
JWT_TOKEN_CACHE_DURATION=3600
JWT_TOKEN_REFRESH_BUFFER=300

# HTTP Request Settings
REQUEST_TIMEOUT=30
REQUEST_RETRIES=3
REQUEST_RETRY_DELAY=1.0
REQUEST_RETRY_BACKOFF=2.0

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# SSL Settings
SSL_VERIFY=true
# SSL_CERT_PATH=path/to/cert.pem