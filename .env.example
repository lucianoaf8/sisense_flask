# Sisense Configuration
SISENSE_URL=https://your-sisense-instance.com
SISENSE_API_TOKEN=your_sisense_api_token_here

# Demo Mode (set to true to run without real Sisense credentials)
DEMO_MODE=false

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_PORT=5000

# Authentication Settings
JWT_TOKEN_CACHE_DURATION=3600
JWT_TOKEN_REFRESH_BUFFER=300

# HTTP Request Settings
REQUEST_TIMEOUT=30
REQUEST_RETRIES=3
REQUEST_RETRY_DELAY=1.0
REQUEST_RETRY_BACKOFF=2.0

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# SSL Settings
SSL_VERIFY=true
# SSL_CERT_PATH=path/to/cert.pem